{{#if logged_in}}
  {{! Main Blog Post }}
  <div class="mx-5 my-4 p-4 bg-blogpost d-flex flex-column">
    <header class="pb-2 border-bottom border-light">
      <h3>{{post.title}}</h3>
    </header>

    <div class="mt-3">
      <i class="fa-solid fa-2xl fa-circle-user" style="color: #c5056e;"></i>
      <strong>
        <span>
          á›’y
          {{post.user.name}}
        </span>
      </strong>
    </div>

    <article>
      <p class="py-3">{{post.content}}</p>
    </article>

    <footer class="pt-3 border-top border-light d-flex justify-content-between">
      <time>
        {{ format_date post.createdAt }}
      </time>
      <strong>
        <button id="btn-post" class="btn-clear custom-icon"><i
            class="fa-solid fa-2xl fa-comment"
            style="color: #ffffff;"
          ></i>Comment</button>
      </strong>
    </footer>
  </div>

  {{! Write a comment section }}
  <div id="add-comment" class="hide m-5 p-4 frost comments">
    <form class="comment-form">
      <textarea
        id="comment"
        data-user="{{user_id}}"
        placeholder="Write a comment..."
      ></textarea>
      <button class="custom-btn mt-3" type="submit">
        Submit
      </button>
    </form>
  </div>

  <strong class="m-4 p-4">
    <span>COMMENTS:</span>
    <i class="px-2 fa-solid fa-xl fa-comments" style="color: #ffffff;"></i>
  </strong>

  {{! Render all comments for post section }}
  {{#each post.comments as |comment|}}
    <div class="mx-5 my-4 p-4 bg-blogpost d-flex flex-column">
      <header class="mt-3">
        <i class="fa-solid fa-2xl fa-circle-user" style="color: #ffffff;"></i>
        <strong>
          <span>
            {{comment.user.name}}
          </span>
        </strong>
      </header>

      <article>
        <p class="py-3">{{comment.content}}</p>
      </article>

      <footer class="pt-3 border-top border-light">
        <time>
          {{comment.createdAt}}
        </time>
      </footer>
    </div>
  {{/each}}

  <script src="/js/addComment.js"></script>

{{else}}

  {{! PLEASE LOG IN TO VIEW CONTENT}}
  <div class="my-5 d-flex justify-content-center">
    <div class="frost w-75 d-flex justify-content-center">
      <div class="m-5 p-4 w-75 bg-blogpost">
        <div class="d-flex flex-column align-items-center">
          <div class="d-flex flex-column text-start w-75">
            <header class="pb-2 border-bottom border-light">
              <h3>
                <i
                  class="fa-solid fa-triangle-exclamation fa-xl"
                  style="color: #ffffff;"
                ></i>
                <span class="px-3">Please Login</span>
              </h3>
            </header>

            <p>You must be logged in to view content...</p>

            {{! Link to Login page }}
            <a href="/login" class="custom-btn mt-3">
              Sign In
            </a>

            {{! Link to Sign Up Page }}
            <a href="/signup" class="custom-btn mt-3">
              Sign Up
            </a>

            {{! Link to Homepage }}
            <footer class="mt-4 pt-3 border-top border-light">
              <strong>
                <a href="/" class="btn-clear custom-icon"><i
                    class="fa-solid fa-xl fa-circle-arrow-left"
                    style="color: #bfbfbf;"
                  ></i>Return</a>
              </strong>
            </footer>
          </div>
        </div>
      </div>
    </div>
  </div>

{{/if}}